/* pages/rank/rank.wxss */

.content {
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
  box-sizing: border-box;
}

.content .map-wrapper {
  flex: 0 0 500rpx;
  background: blanchedalmond;
  position: relative;
  font-size: 0;
}

.content .map-wrapper .control {
  position: absolute;
  display: flex;
  /* display: inline-block; */
  padding: 10rpx 12rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.9);
  bottom: 20rpx;
  right: 30rpx;
  z-index: 10;
}

.content .map-wrapper cover-image {
  width: 50rpx;
  height: 50rpx;
}

.content .map-wrapper .control-loc {
  margin-right: 20rpx;
}

.content .map-wrapper .control-sear {
  margin-right: 20rpx;
}

.content .map-wrapper .control-plus {
  margin-right: 20rpx;
}

/***** box start *****/

.content .box-wrapper {
  display: flex;
  height: 100%;
  flex-direction: column;
  flex: 1;
  background: #f1f2f3;
}

.box-wrapper .tab-wrapper {
  flex: 0 0 auto;
}

.box-wrapper .rank-wrapper {
  flex: 1;
  height:300rpx;
  padding-left:30rpx;
}

/***** box end *****/
