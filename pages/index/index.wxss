/* pages/index/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  font-size: 0;
  background:#f3f4f6;
}

/******* nav start ********/

.container .nav {
  display: flex;
  flex-direction: row;
  width: 100%;
  background: #fff;
}

.container .nav .nav-item {
  flex: 1;
  text-align: center;
  /* padding: 20rpx; */
}

.container .nav .nav-item .nav-icon {
  text-align: center;
  padding-top:20rpx;
}

.container .nav .nav-item .nav-icon image {
  width: 50rpx;
  height: 50rpx;
}

.container .nav .nav-item .nav-font {
  text-align: center;
}

.container .nav .nav-item .nav-font text {
  display: inline-block;
  line-height: 40rpx;
  font-size: 24rpx;
  padding:6rpx 0 6rpx 0;
}

.container .nav .nav-item .nav-link {
  display: inline-block;
  /* padding-bottom: 38rpx; *//* line-height: 100rpx; */
  border-bottom-width: 4rpx;
  font-size: 28rpx;
  color: #666;
}

.container .nav .nav-item.link-active .nav-link {
  border-bottom: 4rpx solid #ff530d;
}

/******* nav end ********/

/******* content start ********/

.container .content {
  position: absolute;
  /* background: #f3f4f6; */
  background: #f3f4f6;
  top: 128rpx;
  bottom: 0;
  left: 0;
  right: 0;
}

/******* content end ********/

/******* story start ********/

.container .content .story-wrapper {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  font-size: 32rpx;
  /* padding: 10rpx 10rpx 0 10rpx; */
  bottom: 370rpx;
}

/******* story end ********/

/******* box start ********/

.container .content .box-wrapper {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 620rpx;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}

.container .content .box-wrapper .tab-wrapper {
  flex: 0 0 auto;
}

.container .content .box-wrapper .rank-wrapper {
  flex: 1;
  height: 100rpx;
  margin-left: 30rpx;
}

/******* box end ********/
