<!--pages/rank/rank.wxml-->
<view class="container">
  <component-nav bind:navEvent="handleNavEvent"></component-nav>
  <view class="content">
    <view class="map-wrapper">
      <map id="map" longitude="{{cenLatLon[1]}}" latitude="{{cenLatLon[0]}}" markers="{{markers}}" show-location scale="{{mapData.scale}}" style="width: 100%;height: 500rpx;" controls="{{controls}}" bindmarkertap="handleMarkerTap"></map>
      <view class="control">
        <image class="control-loc" bind:tap="handleCenterTap" src="/static/images/location-2.png"></image>
        <image class="control-sear" bind:tap="handleSearchTap" src="/static/images/search.png"></image>
        <image class="control-plus" bind:tap="handlePlusTap" src="/static/images/plus2.png"></image>
        <image class="control-minus" bind:tap="handleMinusTap" src="/static/images/minus2.png"></image>
      </view>
    </view>
    <view class="box-wrapper">
      <view class="tab-wrapper">
        <component-tab bind:tapEvent="handleTapEvent"></component-tab>
      </view>
      <view class="rank-wrapper">
        <scroll-view scroll-y style="height:100%" scroll-top="{{boxScrollTop}}" scroll-y>
          <block wx:for="{{boxList}}" wx:for-index="index" wx:for-item="item">
            <component-box boxList="{{item}}"></component-box>
          </block>
        </scroll-view>
      </view>
    </view>
  </view>
</view>